{% extends 'templates/layout.twig' %}

{% block title %} {{ __('pages.checkout.title') }} {% endblock %}

{% block content %}
    <div class="container">
        <form action="/checkout/pay" method="POST">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
                    {% include('components/util/errors.twig') %}

                    <div class="card mb-3">
                        <div class="card-header d-flex align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-truck mr-2" viewBox="0 0 16 16">
                                <path d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5v-7zm1.294 7.456A1.999 1.999 0 0 1 4.732 11h5.536a2.01 2.01 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456zM12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12v4zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                            </svg>
                            <span>{{ __('checkout.delivery_address') }}</span>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                    <label for="first_name">{{ __('checkout.form.first_name') }}</label>
                                    <input id="first_name" type="text" class="form-control" name="first_name"
                                           value="{{ auth().getUser().getFirstName() }}">
                                </div>
                                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                                    <label for="last_name">{{ __('checkout.form.last_name') }}</label>
                                    <input id="last_name" type="text" class="form-control" name="last_name"
                                           value="{{ auth().getUser().getLastName() }}">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-12 col-sm-12 col-md-10 col-lg-10 col-xl-10">
                                    <label for="street_name">{{ __('checkout.form.street_name') }}</label>
                                    <input id="street_name" type="text" class="form-control" name="street_name">
                                </div>
                                <div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xl-2">
                                    <label for="house_number">{{ __('checkout.form.house_number') }}</label>
                                    <input id="house_number" type="number" class="form-control" name="house_number">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-12 col-sm-12 col-md-7 col-7-10 col-xl-7">
                                    <label for="city">{{ __('checkout.form.city') }}</label>
                                    <input id="city" type="text" class="form-control" name="city">
                                </div>
                                <div class="col-12 col-sm-12 col-md-5 col-lg-5 col-xl-5">
                                    <label for="postal_code">{{ __('checkout.form.postal_code') }}</label>
                                    <input id="postal_code" type="text" class="form-control" name="postal_code">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header d-flex align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-truck mr-2" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                      d="M11 15a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm5-4a5 5 0 1 1-10 0 5 5 0 0 1 10 0z"/>
                                <path d="M9.438 11.944c.047.596.518 1.06 1.363 1.116v.44h.375v-.443c.875-.061 1.386-.529 1.386-1.207 0-.618-.39-.936-1.09-1.1l-.296-.07v-1.2c.376.043.614.248.671.532h.658c-.047-.575-.54-1.024-1.329-1.073V8.5h-.375v.45c-.747.073-1.255.522-1.255 1.158 0 .562.378.92 1.007 1.066l.248.061v1.272c-.384-.058-.639-.27-.696-.563h-.668zm1.36-1.354c-.369-.085-.569-.26-.569-.522 0-.294.216-.514.572-.578v1.1h-.003zm.432.746c.449.104.655.272.655.569 0 .339-.257.571-.709.614v-1.195l.054.012z"/>
                                <path d="M1 0a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h4.083c.058-.344.145-.678.258-1H3a2 2 0 0 0-2-2V3a2 2 0 0 0 2-2h10a2 2 0 0 0 2 2v3.528c.38.34.717.728 1 1.154V1a1 1 0 0 0-1-1H1z"/>
                                <path d="M9.998 5.083 10 5a2 2 0 1 0-3.132 1.65 5.982 5.982 0 0 1 3.13-1.567z"/>
                            </svg>
                            <span>{{ __('checkout.payment_method') }}</span>
                        </div>
                        <div class="card-body">
                            {{ __('checkout.mollie_disclaimer') }}
                        </div>
                    </div>

                    <div class="d-flex align-items-start justify-content-between">
                        <p>{{ __('checkout.payment_disclaimer') }}</p>

                        <button type="submit" class="btn btn-primary bg-nerdygadgets">
                            <div class="d-flex flex-row align-items-center">
                                {{ __('checkout.pay') }}
                                <svg width="1em" height="1em" viewBox="0 0 16 16"
                                     class="bi bi-chevron-right ml-2"
                                     fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                                </svg>
                            </div>
                        </button>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="font-weight-bold mb-0">{{ __('checkout.overview') }}</h5>
                        </div>
                        <div class="card-body pb-0">
                            <table class="table table-borderless table-responsive">
                                <tbody>
                                {% for stockItem in stockItems %}
                                    <tr>
                                        <th scope="row">
                                            <small class="text-muted">{{ cart.itemCount(stockItem.StockItemID) }}x</small>
                                        </th>
                                        <td>{{ stockItem.StockItemName }}</td>
                                        <td>
                                            €{{ format_price_with_tax(cart.itemCount(stockItem.StockItemID) * stockItem.RecommendedRetailPrice) }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <p class="font-weight-bold mb-0">
                                {{ __('checkout.total_amount') }}:
                            </p>
                            <span>
                            € {{ cart.price(stockItems).price_total }}
                        </span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}