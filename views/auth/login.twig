{% extends 'templates/layout.twig' %}

{% block title %} {{ __('pages.login.title') }} {% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-12 col-md-5 col-lg-5 col-xl-5">


                <div class="border rounded p-4">
                    <h4 class="font-weight-bold mb-4">{{ __('auth.login.title') }}</h4>
                    {% if errors is not empty %}
                        <div class="alert alert-danger" role="alert">
                            <ul class="p-0 pl-3 mb-0">
                                {% for error in errors %}
                                    <li>{{ error }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label for="email">{{ __('auth.login.form.email') }}</label>
                            <input class="form-control" type="email" id="email" name="email"
                                   placeholder="{{ __('auth.login.form.email') }}" required="required">
                        </div>
                        <div class="form-group">
                            <label for="password">{{ __('auth.login.form.password') }}</label>
                            <input class="form-control" type="password" id="password" name="password"
                                   required="required"
                                   placeholder="{{ __('auth.login.form.password') }}">
                        </div>
                        <div class="form-group">
                            <div class="d-flex flex-row justify-content-between">
                                <div class="remember-me">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" name="remember"
                                               id="remember">
                                        <label class="custom-control-label"
                                               for="remember">{{ __('auth.login.form.remember_me') }}</label>
                                    </div>
                                </div>
                                <div class="forgot-password">
                                    <a href="/password/reset">{{ __('auth.login.form.forgot_password') }}</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary bg-nerdygadgets form-control"
                                    type="submit">{{ __('auth.login.form.submit') }}</button>
                        </div>
                    </form>
                </div>
                <div class="text-center mt-3">
                    <p>{{ __('auth.login.no_account') }} <a href="/register">{{ __('auth.login.sign_up') }}</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}