{% if auth().isLoggedIn() %}
    <div class="d-flex flex-row align-items-center">
        <div>
            <a href="/profile" class="icon rounded-circle border mr-2">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person d-block"
                     fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                          d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                </svg>
            </a>
        </div>
        <div class="auth-welcome d-none d-sm-none d-md-block">
            <p class="mb-0 text-muted">{{ __('common.welcome') }},<br/>
                <span class="font-weight-medium">{{ auth().getUser().getFullName() }}</span>
            </p>
        </div>
    </div>
{% else %}
    <div class="d-flex flex-row align-items-center">
        <div>
            <a href="/login" class="icon rounded-circle border mr-2">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person d-block"
                     fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                          d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                </svg>
            </a>
        </div>
        <div class="auth-welcome d-none d-sm-none d-md-block">
            <p class="mb-0 text-muted">{{ __('nav.auth.welcome') }}</p>
            <a href="/login">{{ __('nav.auth.login') }}</a>
            {{ __('nav.auth.or') }}
            <a href="/register">{{ __('nav.auth.register') }}</a>
        </div>
    </div>
{% endif %}